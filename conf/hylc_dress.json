// Dress on female character
// Narain et al. 2012, Figure 10(a)
{
    "hylc": {
        "enabled": true,
        // "material": "hylcmaterials/stockinette1.json"
        // "material": "hylcmaterials/cartrib1.json"
        "material": "hylcmaterials/basket1.json"
    },
    "implicit": true,

    "frame_time": 0.0167,
    "frame_steps": 10,

    "end_time": 20,
    "cloths": [{
        "mesh": "meshes/dress2_uv.obj",
        "transform": {"rotate": [90, 1, 0, 0]},
