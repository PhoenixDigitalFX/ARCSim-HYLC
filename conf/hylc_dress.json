            "aspect_min": 0.2
        }
    }],
    "motions": {
        "motfile": "meshes/dance-paused.mot",
        "fps": 30,
        "transform": {
            "translate": [0, 0, -1],
            "rotate": [-90, 0, 0, 1]
        }
    },
    "obstacles": "meshes/female-objs/body%04d.obj",
    "gravity": [0, 0, -9.8],
    "disable": ["popfilter"],
    "magic": {"repulsion_thickness": 5e-3, "collision_stiffness": 1e6
